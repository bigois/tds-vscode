{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "information_for_contributors": [
    "If you want to provide a fix or improvement, please create a pull request against the original repository.",
    "Once accepted there, we are happy to receive an update request."
  ],
  "name": "AdvPL",
  "scopeName": "source.advpl",
  "patterns": [
    {
      "include": "#directives"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#number"
    },
    {
      "include": "#words"
    }
  ],
  "repository": {
    "directives": {
      "patterns": [
        {
          "name": "keyword.directive.advpl",
          "match": "(?i)#\\b(define|endif|else|ifdef|ifndef|include|xcommand|xtranslate)\\b"
        }
      ]
    },
    "words": {
      "patterns": [
        {
          "name": "word.advpl",
          "match": "(\\w+)"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.block.advpl",
          "begin": "/\\*",
          "end": "\\*/"
        },
        {
          "name": "comment.line.advpl",
          "begin": "(?=//)",
          "end": "(?=$)"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.advpl",
          "begin": "\"",
          "end": "(?=$)|\""
        },
        {
          "name": "string.quoted.single.advpl",
          "begin": "'",
          "end": "(?=$)|'"
        }
      ]
    },
    "number": {
      "patterns": [
        {
          "name": "constant.numeric.advpl",
          "match": "(\\d+)(\\.\\d+)?"
        }
      ]
    }
  }
}